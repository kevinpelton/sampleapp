<h1>Hospital</h1>

<table class="table table-striped">

<tr>
  <td><b>Name</b></td>
  <td><%= @hospital.name %></td>
</tr>

<tr>
  <td><b>Address</b></td>
  <td><%= @hospital.address %></td>
</tr>

<tr>
  <td><b>City</b></td>
  <td><%= @hospital.city %></td>
</tr>

<tr>
  <td><b>State</b></td>
  <td><%= @hospital.state %></td>
</tr>

<tr>
  <td><b>Zip</b></td>
  <td><%= @hospital.zip %></td>
</tr>

<tr>
  <td><b>County</b></td>
  <td><%= @hospital.county %></td>
</tr>

<tr>
  <td><b>Type</b></td>
  <td><%= @hospital.hospital_type %></td>
</tr>

<tr>
  <td><b>Owner</b></td>
  <td><%= @hospital.owner %></td>
</tr>

<tr>
  <td><b>Emergency services</b></td>
  <td><%= @hospital.emergency_services %></td>
</tr>

<tr>
  <td><b>Location</b></td>
  <td><%= @hospital.location %></td>
</tr>
</table>

<div class="form-actions">
  <%= link_to 'Back', hospitals_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_hospital_path(@hospital), :class => 'btn' %>
  <%= link_to 'Delete', hospital_path(@hospital), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
